@model EmployeeDepartmentListViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" asp-action="SaveEdit" asp-controller="Employee" asp-route-id="@Model.Id">
    <!--action="/Employee/SaveEdit/@Model.Id"-->
    <div>
        @* <label id="Name">Name</label> *@
        @* <input id="name" name="Name" value="@Model.Name" class="form form-control " /> *@
        @* @Html.LabelFor(e => e.Name) *@
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name" />
        @* @Html.EditorFor(e => e.Name, new { @class = "form form-control" }) *@
        @* @Html.TextBoxFor(e => e.Name, new { @class = "form form-control" }) *@
    </div>
    <div>
        <label id="salary">Salary</label>
        <input type="number" id="salary" name="Salary" value="@Model.Salary" class="form form-control " />
    </div>
    <div>
        <label id="jobTitle">JobTitle</label>
        <input id="jobTitle" name="JobTitle" value="@Model.JobTitle" class="form form-control " />
    </div>
    <div>
        <label id="address">Address</label>
        <input id="address" name="Address" value="@Model.Address" class="form form-control " />
    </div>
    <div>
        <label id="imageUrl">ImageUrl</label>
        <input id="imageUrl" name="ImageUrl" value="@Model.ImageUrl" class="form form-control " />
    </div>

    <div>
        <label>DepartmentId</label>
        @* <input type="number" id="departmentId" name="DepartmentId" value="@Model.DepartmentId" class="form form-control " /> *@
        <select id="departmentId" name="DepartmentId"  class="form form-control">
            @foreach (var depatment in Model.DepartmentList)
            {
                if (Model.DepartmentId == depatment.Id)
                {
                    <option value="@depatment.Id" selected>@depatment.Name</option>
                }
                else
                {
                    <option value="@depatment.Id">@depatment.Name</option>
                }
            }
        </select>
    </div>
    
    <div style="margin-top:3px">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>

<div>
    @* <a href="/Employee/Index">Back To List</a> *@
    <a asp-action="Index" asp-controller="Employee">Back To List</a>
    @* @Html.ActionLink("Back To List", "Index", "Employee") *@
</div>



