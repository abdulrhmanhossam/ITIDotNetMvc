@model IEnumerable<ITIDotNetMvc.Models.Entites.Employee>

@{
    ViewData["Title"] = "Employee Index";
}

<h1>Index</h1>


<table class="table table-hover table-bordered" style="text-align:center">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Salary</th>
        <th>Job Title</th>
        <th>Address</th>
        <th>Image</th>
        <th>Department Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Salary</td>
            <td>@item.JobTitle</td>
            <td>@item.Address</td>
            <td>
                <img src="~/Images/@item.ImageUrl" style="width:80px"/>
            </td>
            <td>@item.Department.Name</td>
        </tr>
    }
</table>






